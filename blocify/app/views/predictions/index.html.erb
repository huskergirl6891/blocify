<h1>Predictions</h1>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Song Title</th>
              <th>Will I like it?</th>
            </tr>
          </teadh>
          <tbody>
            <% @predictions.each_with_index do |prediction,index| %>
              <tr>
                <th scope="row"><%= (index + 1) %></th>
                <td><%= prediction.song %></td>
                <td>
                  <% if prediction.result == 1 %>
                    <%= "Yes" %>
                  <% elsif prediction.result == 0 %>
                    <%= "No" %>
                  <% else %>
                    <%= "Not sure" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "Delete", prediction, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this prediction?'} %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <% if @model_status == "ready" %>
      <%= link_to "New Prediction", new_prediction_path, class: 'btn btn-success' %><br><br>
      <%= button_to "Delete Endpoint", new_endpoint_path, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this endpoint?' } %><br><br>
    <% elsif @model_status == "updating" %>
      <p>Endpoint is being created.  Please refresh page.</p>
    <% else %>
      <%= link_to "Create Endpoint", endpoints_path, method: :post, class: 'btn btn-success' %><br><br>
    <% end %>
  </div>
</div>
